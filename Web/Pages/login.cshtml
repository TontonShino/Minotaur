@page 
@model Web.Pages.loginModel
@{
    ViewData["Title"] = "login";
}


    <form method="post" action="login">
        <h4>Connexion</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Input.Username"></label>
            <input asp-for="@Model.Input.Username" class="form-control" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="@Model.Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default" ">Connexion</button>
        </div>
        <div class="form-group">
            <p>
                <a asp-page="./ForgotPassword">Mot de passe oublié?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="">S'inscrire</a>
            </p>
        </div>
    </form>


