
<div class="row col-12">
    <div class="col-3"></div>

    <div class="container col-6">
        <h4>Device Editor</h4>
        <div>
            <div class="form-group">
                <div class="row align-items-center">
                    <label class="col">Name</label>
                    <input class="form-control col" @bind="@device.Name" />
                </div>
            </div>
            <div class="form-group">
                <div class="row align-items-center">
                    <label class="col">Description</label>
                    <textarea class="form-control col" @bind="@device.Description"></textarea>
                </div>
            </div>

            <div class="row align-items-center">
               <button class="btn btn-outline-success col" @onclick="@OnValidate">Add</button> 
            </div>

        </div>
    </div>
    <div class="col-3"></div>
</div>

@code {
    [Parameter]
    Device device { get; set; }

    [Parameter]
    EventCallback<UIMouseEventArgs> OnValidate { get; set; }

}
